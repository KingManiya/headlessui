{
  "name": "browser-tests",
  "private": true,
  "version": "0.0.0",
  "description": "A set of browser tests",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tailwindlabs/headlessui.git",
    "directory": "packages/browser-tests"
  },
  "scripts": {
    "pretest": "rimraf playwright/.cache",
    "test": "npm run test:vue && npm run test:react",
    "test:vue": "SUITE=vue playwright test -c playwright.config.ts",
    "test:vue:debug": "SUITE=vue playwright test -c playwright.config.ts --headed",
    "test:react": "SUITE=react playwright test -c playwright.config.ts",
    "test:react:debug": "SUITE=react playwright test -c playwright.config.ts --headed",
    "pretest:debug": "rimraf playwright/.cache",
    "test:debug": "playwright test -c playwright.config.ts --headed"
  },
  "devDependencies": {
    "@headlessui/react": "*",
    "@headlessui/vue": "*",
    "@playwright/experimental-ct-react": "^1.22.2",
    "@playwright/experimental-ct-vue": "^1.22.2",
    "@vitejs/plugin-react": "^1.3.1",
    "@vitejs/plugin-vue": "^2.3.1",
    "vite": "^2.9.6",
    "vue-tsc": "^0.34.10"
  },
  "dependencies": {
    "@vitejs/plugin-vue-jsx": "^1.3.10",
    "react": "17"
  }
}
